<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    tools:context=".MainActivity">

<!--    <ImageView-->
<!--        android:id="@+id/imageView"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content" />-->

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@android:dimen/app_icon_size"
            android:layout_marginRight="@android:dimen/app_icon_size"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="match_parent"
                android:layout_height="209dp"
                android:src="@drawable/abc_vector_test"
                />

            <Button
                android:id="@+id/changePicBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:text="Change Profile Picture"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/saveBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:text="save"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:ems="10"
                android:hint="Firstname"
                android:inputType="textPersonName"
                android:paddingTop="@android:dimen/app_icon_size" />

            <EditText
                android:id="@+id/mname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:ems="10"
                android:hint="Middlename"
                android:inputType="textPersonName"
                android:paddingTop="@android:dimen/app_icon_size" />

            <EditText
                android:id="@+id/lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:ems="10"
                android:hint="Lastname"
                android:inputType="textPersonName"
                android:paddingTop="@android:dimen/app_icon_size" />

            <EditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:ems="10"
                android:hint="Age"
                android:inputType="number"
                android:paddingTop="@android:dimen/app_icon_size" />

            <EditText
                android:id="@+id/bdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:ems="10"
                android:hint="Birthdate (mm/dd/yyyy)"
                android:inputType="textPersonName"
                android:paddingTop="@android:dimen/app_icon_size" />

            <EditText
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:ems="10"
                android:hint="Gender"
                android:inputType="textPersonName"
                android:paddingTop="@android:dimen/app_icon_size" />

            <EditText
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:ems="10"
                android:hint="Contact Number"
                android:inputType="textPersonName"
                android:paddingTop="@android:dimen/app_icon_size" />

            <Button
                android:id="@+id/updatebtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@android:dimen/app_icon_size"
                android:layout_marginBottom="@android:dimen/app_icon_size"
                android:backgroundTint="@color/colorAccent"
                android:text="Update"
                android:textColor="?attr/colorBackgroundFloating" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>